<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= game.title %>">
</div>

<div>
    <label>Author</label>
    <select name="author">
    <% authors.forEach(author => { %>
        <% if (author._id.equals(game.author)) { %>
            <option label="<%= author.name %>" value="<%= author._id %>" selected></option>
        <% } else { %>
            <option label="<%= author.name %>" value="<%= author._id %>"></option>
        <% } %>
    <% }) %>
    </select>
</div>

<div>
    <label>Release Date</label>
    <input type="date" name="releaseDate" value="<%= game.releaseDate == null ? '' : game.releaseDate.toISOString().split("T")[0] %>">
</div>

<div>
    <label>Price</label>
    <input type="number" name="price" min="0" value="<%= game.price %>">
</div>

<div>
    <label>Brief Image</label>
    <input type="file" name="image">
</div>

<div>
    <label>Description</label>
    <textarea name="description" cols="30" rows="5"><%= game.description %></textarea>
</div>





